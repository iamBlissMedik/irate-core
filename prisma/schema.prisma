generator client {
  provider = "prisma-client"
  output   = "../src/generated/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  kyc       KYC?
  wallets   Wallet[]
}

model KYC {
  id          String    @id @default(cuid())
  userId      String    @unique
  fullName    String
  dateOfBirth DateTime
  address     String
  idType      String
  idNumber    String
  documentUrl String?
  status      KYCStatus @default(PENDING)
  verifiedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id])
}

model Wallet {
  id          String        @id @default(cuid())
  userId      String
  balance     Float         @default(0)
  createdAt   DateTime      @default(now())
  Ledger      Ledger[]
  Transaction Transaction[]
  user        User          @relation(fields: [userId], references: [id])
}

model Transaction {
  id        String          @id @default(cuid())
  walletId  String
  type      TransactionType
  amount    Float
  createdAt DateTime        @default(now())
  wallet    Wallet          @relation(fields: [walletId], references: [id])
}

model Ledger {
  id            String     @id @default(cuid())
  walletId      String
  referenceId   String?
  description   String
  amount        Float
  balanceBefore Float
  balanceAfter  Float
  type          LedgerType
  createdAt     DateTime   @default(now())
  wallet        Wallet     @relation(fields: [walletId], references: [id])
}

model AuditLog {
  id        Int      @id @default(autoincrement())
  userId    String
  action    String
  metadata  Json?
  createdAt DateTime @default(now())
}

enum UserRole {
  ADMIN
  USER
}

enum TransactionType {
  CREDIT
  DEBIT
}

enum LedgerType {
  CREDIT
  DEBIT
  FEE
  ADJUSTMENT
}

enum KYCStatus {
  PENDING
  VERIFIED
  REJECTED
}
